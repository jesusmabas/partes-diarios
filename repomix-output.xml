                  stackId="1"
                  stroke="#3498DB"
                  fill="#3498DB"
                  connectNulls={true}
                />
              </>
            ) : (
              <Area
                type="monotone"
                dataKey="invoicedAmount"
                name="Facturado"
                stroke="#27AE60"
                fill="#27AE60"
                connectNulls={true}
              />
            )}
          </AreaChart>
        )}
      </ResponsiveContainer>
    </div>
  );
};

