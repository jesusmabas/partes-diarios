          byWeek.length > 0 ? (
            <TimelineChart data={byWeek} />
          ) : (
            <EmptyState 
              message="No hay datos suficientes para mostrar la evolución temporal." 
              icon="📈" 
            />
          )
        )}
      </div>
    </div>
  );
};

export default React.memo(DashboardCharts);
